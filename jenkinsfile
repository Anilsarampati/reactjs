pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE_NAME = "reactjs-ecommerce"  // Define your image name
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', 
                url: 'https://github.com/Anilsarampati/reactjs.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE_NAME} ."
                }
            }
        }

        stage('Run with Docker Compose') {
            steps {
                sh "docker-compose down || true"
                sh "docker-compose up -d"
            }
        }
    }
}