pipeline {
    agent any

    environment {
        DOCKER_COMPOSE = 'docker-compose'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Anilsarampati/reactjs.git'
            }
        }

        stage('Build React App') {
            steps {
                sh 'npm install'
                sh 'npm run build' // Ensure this exists in package.json
            }
        }

        stage('Docker Build & Run') {
            steps {
                sh 'docker-compose down || true'
                sh 'docker-compose build --no-cache'
                sh 'docker-compose up -d'
            }
        }

        stage('Verify') {
            steps {
                sleep(time: 10, unit: 'SECONDS') // Wait for app to start
                sh 'curl -sSf http://localhost:3000 || exit 1'
            }
        }
    }

    post {
        always {
            sh 'docker-compose down || true'
            cleanWs()
        }
    }
}
